
##
## Setup VISITHOME & VISITARCH variables.
##
SET(VISITHOME @VISITHOME@)
SET(VISIT_VERBOSE_MAKEFILE TRUE)
#SET(IGNORE_THIRD_PARTY_LIB_PROBLEMS 1)
SET(DEBIAN TRUE)
SET(BUILD_PREFIX /usr)
SET(DEB_HOST_MULTIARCH @DEB_HOST_MULTIARCH@)
SET(HDF5_FLAVOR serial)

# Specify the Qt4 binary dir. 
# (qmake us used to locate & setup Qt4 dependencies)

VISIT_OPTION_DEFAULT(VISIT_THREAD TRUE)
VISIT_OPTION_DEFAULT(VISIT_BUILD_ALL_PLUGINS TRUE)
VISIT_OPTION_DEFAULT(VISIT_QT5 1)
VISIT_OPTION_DEFAULT(VISIT_QT_DIR ${BUILD_PREFIX})
VISIT_OPTION_DEFAULT(VISIT_QT_SKIP_INSTALL 1)

# QWT

VISIT_OPTION_DEFAULT(VISIT_QWT_DIR ${BUILD_PREFIX})

# Python

VISIT_OPTION_DEFAULT(PYTHON_INCLUDE_PATH ${BUILD_PREFIX}/include/@PYVERS@)
VISIT_OPTION_DEFAULT(PYTHON_LIBRARY ${BUILD_PREFIX}/lib/x86_64-linux-gnu/lib@PYVERS@.so)
VISIT_OPTION_DEFAULT(PYTHON_EXECUTABLE ${BUILD_PREFIX}/bin/python2.7)
VISIT_OPTION_DEFAULT(VISIT_VTK_SKIP_INSTALL 1)
VISIT_OPTION_DEFAULT(VISIT_PYTHON_SKIP_INSTALL 1)

# Compiler flags

VISIT_OPTION_DEFAULT(VISIT_C_COMPILER gcc)
VISIT_OPTION_DEFAULT(VISIT_CXX_COMPILER g++)
VISIT_OPTION_DEFAULT(VISIT_C_FLAGS "  -fvisibility=hidden")
VISIT_OPTION_DEFAULT(VISIT_CXX_FLAGS " -fvisibility=hidden -DVTK_EXCLUDE_STRSTREAM_HEADERS ")

